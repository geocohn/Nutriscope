        app:layout_constraintRight_toRightOf="@+id/categoriesLabel"
        app:layout_constraintTop_toBottomOf="@+id/categoriesLabel"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/categoriesLabel" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Labels, certifications, awards"
        android:ems="10"
        android:id="@+id/labelsCertsAwardsLabel"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
