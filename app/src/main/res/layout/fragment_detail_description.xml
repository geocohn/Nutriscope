    <TextView
        android:text="Brands:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/brandsLabel"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/labelsCertsAwards"
